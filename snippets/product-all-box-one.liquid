<div>
  <div>
    <div class="grid-x">
    <div class="third-section-hero medium-6 small-12 cell" {% if block.settings.product-one-pic %} style="background-image: url('{{ block.settings.product-one-pic | img_url: '2048x' }}'); background-position: center;"{% endif %}>  
    </div>
    <div class="product-all-container small-12 medium-6 cell {% if block.settings.product-one-align == 'right' %}align-right{% elsif block.settings.product-one-align == 'center' %}align-center{% elsif block.settings.product-one-align == 'left' %}align-left{% endif %} {% if block.settings.product-one-color == 'green' %}prod-all-green{% elsif block.settings.product-one-color == 'red' %}prod-all-red{% elsif block.settings.product-one-color == 'orange' %}prod-all-orange{% elsif block.settings.product-one-color == 'black' %}prod-all-black{% elsif block.settings.product-one-color == 'brown' %}{% elsif block.settings.product-one-color == 'blue' %}prod-all-blue{% endif %}">
        <div class="{% if block.settings.product-one-align-text == 'right' %}text-right{% elsif block.settings.product-one-align-text == 'center' %}text-center{% elsif block.settings.product-one-align-text == 'left' %}text-left{% endif %}">
           <article>
             <div class="text-container">
              <header>
                {% if block.settings.product-one-h1 != blank %}
                  <h1>{{ block.settings.product-one-h1 | escape }}</h1>
                {% endif %}
              </header>
             
              <div class="grid-x align-center">
                <div class="cell small-12 medium-10 large-6">
                {% if block.settings.product-one-h2 != blank %}
                  <h2>{{ block.settings.product-one-h2 | escape }}</h2>
                {% endif %}
                {% if block.settings.product-one-pronounce != blank %}
                  <p>{{ block.settings.product-one-pronounce | escape }}</p>
                {% endif %}
                {% if block.settings.product-one-blurb != blank %}
                  <p>{{ block.settings.product-one-blurb | escape }}</p>
                {% endif %}
                </div>
              </div>
              <div class="grid-x align-center">
                <div class="cell small-12">
                   <div class="button-group align-center third-pad">
                      <a class="button {% if block.settings.product-one-type == 'primary' %}primary{% elsif block.settings.product-one-type == 'secondary' %}secondary{% endif %}" href="{{ block.settings.product-one-link }}">{{ block.settings.product-one-label }}</a>
                  </div>
                </div>
              </div>
            </div>
           </article>
        </div>
      </div>
    </div>
  </div>
</div>


