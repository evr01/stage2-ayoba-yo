<section itemprop="mainEntity" itemscope itemtype="http://schema.org/QAPage">
	<div class="grid-container meet-hero-container">
		<div class="grid-x align-center meet-hero">
			<div class="cell small-12 text-center">
				<h2 class="h1">{{ page.title }}</h2>
			</div>
			<div class="cell small-12 text-center">
				{% if section.settings.meeth2!= blank %}
          <h1 class="h2" itemprop="name">{{ section.settings.meeth2| escape }}</h1>
        {% endif %}
			</div>
			<div class="cell small-10 medium-6 text-center" itemprop="description">
        <p>{{ page.content }}</p>
			</div>
		</div>
	</div>
	<div>
 {% include 'blurb' %}
  </div>
	<div class="grid-container meet-content">
		<div grid-x>
			<div class="cell small-12">
        <div class="grid-container">
        {% for block in section.blocks %}
          <div class="grid-x align-center meet-container grid-margin-x" itemprop="mainEntity" itemscope itemtype="http://schema.org/Question">
              {% if block.type == 'meet-faq' %}
              <div class="cell small-10 medium-3 text-center" style="text-align: left;">
                <img class="meat-icon" alt="{{block.settings.meet-faq-alt}}" src="{{ block.settings.meat-image | img_url: '200x' }}" style="float: none;" itemprop="image" />
              </div>
              <div class="cell small-10 medium-9 mobile-center"> 
                <h2 itemprop="name">{{ block.settings.meet-faq-h2 }}</h2>
                  <span itemprop="suggestedAnswer acceptedAnswer" itemscope itemtype="http://schema.org/Answer">
                    <span itemprop="text">
                      <h3>{{ block.settings.meet-faq-h3 }}</h3>
                      <p>{{ block.settings.meet-faq-p }}</p>
                    </span>
                  </span>          
              </div>
              {% endif %}   
          </div>
          <div class="grid-x align-center">
                {% if block.type == 'meet-btn' %}
                  <a class="button btn-pad {% if block.settings.meet-btn-type == 'primary' %}primary{% elsif block.settings.meet-btn-type == 'secondary' %}secondary{% endif %}" href="{{ block.settings.meet-btn-link }}">{{ block.settings.meet-btn-label }}</a>
                {% endif %}
          </div>
          {% endfor %}
        </div>            
			</div>
		</div>
	</div>
</section>







