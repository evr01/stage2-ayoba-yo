{% schema %}
  {
    "name": "Blog pages",
    "settings": [
      {
        "type": "text",
        "id": "recipeh1",
        "label": "recipeh1",
        "default": "h1"
      },
      {
        "type": "text",
        "id": "recipeh2",
        "label": "recipeh2",
        "default": "h2"
      },
      {
        "type": "text",
        "id": "recipeblurb",
        "label": "recipeblurb",
        "default": "description"
      },
      {
        "type": "select",
        "id": "layout",
        "label": "Layout",
        "default": "list",
        "options": [
          {
            "value": "grid",
            "label": "Grid"
          },
          {
            "value": "list",
            "label": "List"
          }
        ]
      },
      {
        "type": "checkbox",
        "id": "blog_show_author",
        "label": "Show author",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "blog_show_date",
        "label": "Show date",
        "default": true
      },
       {
        "type": "text",
        "id": "cta-blog-h3",
        "label": "h3"
      },
      {
        "type": "text",
        "id": "cta-blog-p",
        "label": "p"
      }
    ]
  }
{% endschema %}
