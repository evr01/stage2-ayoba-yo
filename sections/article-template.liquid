<article itemscope itemtype="http://schema.org/Article">
  <div class="blog-article"{% if article.image %} style="background-image: url('{{ article | img_url: '2048x', scale: 2 }}');"{% endif %}>
    <div class="grid-container">
      <div class="grid-x">
        <div class="cell small-12 {% if section.settings.second-text-h1-align == 'right' %}text-right{% elsif section.settings.second-text-h1-align == 'center' %}text-center{% elsif section.settings.second-text-h1-align == 'left' %}text-left{% endif %}">

          <header class="meet-hero">
            <h1>{{ article.title }}</h1>
            {% if section.settings.blog_show_date %}
            <p class="lead">
              {{ article.published_at | time_tag: format: 'month_day_year' }}
            </p>
          {% endif %}
          {% if section.settings.blog_show_author %}
            <p class="lead">{{ 'blogs.article.by_author' | t: author: article.author }}</p>
          {% endif %}
          {% if section.settings.show_share_buttons %}
            <!-- Go to www.addthis.com/dashboard to customize your tools --> <div class="addthis_inline_share_toolbox"></div>
          {% endif %}
        </header>

        </div> 
      </div>
    </div>
  </div>
  <div class="grid-container">
    <div class="grid-x align-center">
      <div class="cell small-10 article-pad">
        <section>
            <div itemprop="articleBody">
              {{ article.content }}
            </div>
        </section>
      </div>
    </div>
  </div>




<section class="article-cta">
      <div class="grid-container text-center blog-cta-wrap">
        <div class="grid-x align-center">
          <div class="small-8 medium-12 cell">
            {% if section.settings.cta-article-h3 != blank %}
              <h3>{{ section.settings.cta-article-h3 | escape }}</h3>
            {% endif %}
            {% if section.settings.cta-article-p != blank %}
                  <p>{{ section.settings.cta-article-p | escape }}</p>
              {% endif %}
          </div>
        </div>
        <div class="grid-x align-center">
          <div class="cell small-6">

            <div class="reveal" id="exampleModal1" data-reveal>
                <!-- Begin MailChimp Signup Form -->
                <div id="mc_embed_signup">
                  <form action="//ayoba-yo.us11.list-manage.com/subscribe/post?u=53127de0b6e30249d9bc29f9f&amp;id=fb3467f07c" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                      <div id="mc_embed_signup_scroll">
                    <h2>Subscribe to our mailing list</h2>
                  <div class="indicates-required"><span class="asterisk">*</span> indicates required</div>
                  <div class="mc-field-group">
                    <label for="mce-EMAIL">Email Address  <span class="asterisk">*</span>
                  </label>
                    <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL">
                  </div>
                  <div class="mc-field-group">
                    <label for="mce-FNAME">First Name </label>
                    <input type="text" value="" name="FNAME" class="" id="mce-FNAME">
                  </div>
                  <div class="mc-field-group">
                    <label for="mce-LNAME">Last Name </label>
                    <input type="text" value="" name="LNAME" class="" id="mce-LNAME">
                  </div>
                    <div id="mce-responses" class="clear">
                      <div class="response" id="mce-error-response" style="display:none"></div>
                      <div class="response" id="mce-success-response" style="display:none"></div>
                    </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                      <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_53127de0b6e30249d9bc29f9f_fb3467f07c" tabindex="-1" value=""></div>
                      <div class="clear"><input data-open="exampleModal3" type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button primary"></div>
                      </div>
                  </form>
                </div>
        

                <button class="close-button" data-close aria-label="Close modal" type="button">
                  <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <button class="button primary" data-open="exampleModal1">Blog Signup</button>
          </div>

          

        </div>
      </div>

      <!-- This is the nested modal -->
    <div class="reveal" id="exampleModal3" data-reveal>
      <h2>Thanks for subscribing!</h2>
      <button class="close-button" data-close aria-label="Close reveal" type="button">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

</section>
<aside>
  <div class="grid-container related-blog">
    <div class="grid-x grid-margin-x">
      <div class="cell small-12">
          <h2 class="text-center">{{ 'blogs.article.additional_articles' | t: title: blog.title }}</h2>
        </div>
        {% for a in blog.articles limit: 3 %}

          <div class="small-12 medium-4 cell text-center">

              <h3 class="h6">
                <a href="{{ a.url }}" title="{{ a.title | escape }}">{{ a.title }}</a>
              </h3>
              <p>{{ a.published_at | date: format: "month_day_year" }}</p>
              <p>{{ 'blogs.article.by_author' | t: author: a.author }}</p>
              {% if settings.blog_tags %}
                <div>
                  {% for tag in a.tags %}
                    <span><a href="{{ shop.url}}/blogs/{{ blog.handle }}/tagged/{{ tag | handleize }}" title="{{ blog.title | escape }} {{ 'blogs.general.tagged' | t }} {{ tag | escape }}">{{ tag }}</a></span> 
                  {% endfor %}
                </div>
              {% endif %}
              {% if a.image %}
                <a href="{{ a.url }}" title="{{ a.title | escape }}">
                  <img src="{{ a.image | img_url: 'large' }}" alt="{{ a.title | escape }}" />
                </a>
              {% endif %}
              <a href="{{ a.url }}" title="{{ a.title | escape }}">Read More <span class="icon-right-arrow"></span></a>

                              
        
              
              

          </div>
        {% endfor %}

        </div>
  </div>
</aside>
</article>  





{% schema %}
  {
    "name": "Posts",
    "settings": [
      {
        "type": "checkbox",
        "id": "blog_show_author",
        "label": "Show author",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "blog_show_date",
        "label": "Show date",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_share_buttons",
        "label": "Show social sharing buttons",
        "default": true
      },
      {
        "type": "text",
        "id": "cta-article-h3",
        "label": "article h3"
      },
      {
        "type": "text",
        "id": "cta-article-p",
        "label": "article p"
      }
    ]
  }
{% endschema %}
