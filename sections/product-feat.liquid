            </li>
            <li class="orbit-slide">
                <img class="" src="{{ 'droewors-dried-beef-stick-packaging-4x.png' | asset_url }}" itemprop="{{}}" alt="Ayoba-Yo Droewors, South African Jerky, 2oz snack bag">
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="small-7 medium-7 cell product-feature-pad-mobile">
      <ul>
        <li>
            <div class="grid-x">
              <div class="small-4 medium-4 cell text-center">{{ 'icon-no-sugar.svg' | asset_url | img_tag }}</div>
              {% if section.settings.product-feat-one != blank %}
                <h4 class="small-8 medium-8 cell">{{ section.settings.product-feat-one }}</h4>
              {% endif %}
            </div>
        </li>
        <li>
            <div class="grid-x">
            <div class="small-4 medium-4 cell text-center">{{ 'icon-high-protein.svg' | asset_url | img_tag }}</div>
            {% if section.settings.product-feat-two != blank %}
              <h4 class="small-8 medium-8 cell">{{ section.settings.product-feat-two }}</h4>
            {% endif %}
            </div>
        </li>
        <li>
            <div class="grid-x">
            <div class="small-4 medium-4 cell text-center">{{ 'icon-gluten-free.png' | asset_url | img_tag }}</div>
            {% if section.settings.product-feat-three != blank %}
              <h4 class="small-8 medium-8 cell">{{ section.settings.product-feat-three }}</h4>
            {% endif %}
            </div>
        </li>
        <li>
            <div class="grid-x">
            <div class="small-4 medium-4 cell text-center">{{ 'icon-natural-flavor.png' | asset_url | img_tag }}</div>
            {% if section.settings.product-feat-four != blank %}
              <h4 class="small-8 medium-8 cell">{{ section.settings.product-feat-four }}</h4>
            {% endif %}
            </div>
        </li>
        <li>
            <div class="grid-x">
            <div class="small-4 medium-4 cell text-center">{{ 'icon-naturally-air-dried.png' | asset_url | img_tag }}</div>
            {% if section.settings.product-feat-five  != blank %}
              <h4 class="small-8 medium-8 cell">{{ section.settings.product-feat-five }}</h4>
            {% endif %}
            </div>
        </li>
        <li>
            <div class="grid-x">
            <div class="small-4 medium-4 cell text-center">{{ 'icon-whole30.svg' | asset_url | img_tag }}</div>
            {% if section.settings.product-feat-six  != blank %}
              <h4 class="small-8 medium-8 cell">{{ section.settings.product-feat-six }}</h4>
            {% endif %}
            </div>
        </li>
      </ul>
    </div>
  </div>
</div>








<div class="button-group align-center product-feat-btn">
{% for block in section.blocks %} 
    <a class="button btn-pad {% if block.settings.product-feat-btn-type == 'primary' %}primary{% elsif block.settings.product-feat-btn-type == 'secondary' %}secondary{% endif %}" href="{{ block.settings.product-feat-btn-link }}">{{ block.settings.product-feat-btn-label }}</a>
{% endfor %}
</div>

</section>




