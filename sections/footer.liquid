<footer role="contentinfo">
  <div class="footer">
    <div class="grid-container">
      <div class="grid-x footer-nav">
        <div class="cell small-12 medium-4">
          <h4>Company Information</h4>
          {%- assign footer_linklist = section.settings.footer_linklist -%}
            {% if linklists[footer_linklist].links.size > 0 %}
              <ul class="menu vertical">
                {% for link in linklists[footer_linklist].links %}
                  <li>
                    <a href="{{ link.url }}">{{ link.title }}</a>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
        </div>
        <div class="cell small-12 medium-4 order-padding">
          <h4>Orders</h4>
          {% if linklists[footer_linklist].links.size > 0 %}
              <ul class="menu vertical">
                {% for link in linklists.orders.links %}
                  <li>
                    <a href="{{ link.url }}">{{ link.title }}</a>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
        </div>


        <div class="cell small-12 medium-4">
          <div class="grid-container">

            <div class="grid-x">
              <div class="cell small-12">
                <p class="p-resize-footer">Sign Up for additional updates!</p>
              </div>
              <div class="cell small-12">
                <!-- Begin MailChimp Signup Form -->
                <div id="mc_embed_signup">
                  <form data-abide novalidate action="//ayoba-yo.us11.list-manage.com/subscribe/post?u=53127de0b6e30249d9bc29f9f&amp;id=fb3467f07c" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank">
                      <div id="mc_embed_signup_scroll">
                  <div class="mc-field-group">
                    <input required type="email" placeholder="Email Address" name="EMAIL" class="required email" id="mce-EMAIL">
                    <span class="form-error">
                      Please enter your email
                    </span>
                  </div>
                 
                    <div id="mce-responses" class="clear">
                      <div class="response" id="mce-error-response" style="display:none"></div>
                      <div class="response" id="mce-success-response" style="display:none"></div>
                    </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                      <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_53127de0b6e30249d9bc29f9f_fb3467f07c" tabindex="-1" value=""></div>
                      <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button primary" data-open="subscribe"></div>
                      </div>
                  </form>
                </div>
                <div class="reveal text-center" id="subscribe" data-reveal>
                  <p class="lead">Thanks for Subscribing!</p>
                  <p>Please be sure to check your email for verification.</p>
                  <button class="close-button" data-close aria-label="Close modal" type="button">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
              </div>

             

         

              <div class="cell small-12">
                <!-- Go to www.addthis.com/dashboard to customize your tools --> <div class="addthis_inline_follow_toolbox social-icon"></div>
              </div>
            </div>
          </div>   
        </div>
      </div>
      <div class="grid-container">
        <div class="footer-bottom-bar grid-x">
          <div class="small-12 medium-4 cell">
              {% if linklists[footer_linklist].links.size > 0 %}
                <ul class="menu">
                  {% for link in linklists.bottom-links.links %}
                    <li>
                      <a href="{{ link.url }}">{{ link.title }}</a>
                    </li>
                  {% endfor %}
                </ul>
              {% endif %}
          </div>
          <div class="small-12 medium-4 cell">
              <p>Created by <a target="blank" href="https://evrodesigns.com/">EvRo Designs</a></p>
          </div>
          <div class="small-12 medium-4 cell">
             <p class="test">Copyright 2017 Ayoba-Yo. We accept all major credit cards.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "link_list",
        "id": "footer_linklist",
        "label": "Primary menu",
        "default": "footer"
      },
      {
        "type": "link_list",
        "id": "footer_linklist_two",
        "label": "Additional menu",
        "default": "main-menu"
      },
      {
        "type": "checkbox",
        "id": "footer_newsletter_enable",
        "label": "Show newsletter signup",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "show_payment_icons",
        "label": "Show payment icons",
        "default": false
      }
    ]
  }
{% endschema %}
