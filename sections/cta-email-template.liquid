<section class="cta-container">
	<div class="grid-container">
		<div class="grid-x {% if section.settings.cta-h3-align == 'right' %}text-right{% elsif section.settings.cta-h3-align == 'center' %}text-center{% elsif section.settings.cta-h3-align == 'left' %}text-left{% endif %} align-center">
			<div class="small-6 cell cta-pad">
			  <!-- Begin MailChimp Signup Form -->
          <div id="mc_embed_signup">
          <form data-abide novalidate action="//ayoba-yo.us11.list-manage.com/subscribe/post?u=53127de0b6e30249d9bc29f9f&amp;id=fb3467f07c" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank">
            <div data-abide-error class="alert callout" style="display: none;">
              <p><i class="fi-alert"></i> There are some errors in your form.</p>
            </div>
              <div id="mc_embed_signup_scroll">
            {% if section.settings.cta-h3 != blank %}
              <h3 class="product-feature-h2">{{ section.settings.cta-h3 | escape }}</h3>
            {% endif %}
            {% if section.settings.cta-p != blank %}
              <p>{{ section.settings.cta-p | escape }}</p>
          {% endif %}
          <div class="mc-field-group">
            <input required type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL">
            <span class="form-error">Please enter your email to subscribe.</span>
          </div>
            <div id="mce-responses" class="clear">
              <div class="response" id="mce-error-response" style="display:none"></div>
              <div class="response" id="mce-success-response" style="display:none"></div>
            </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
              <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_53127de0b6e30249d9bc29f9f_fb3467f07c" tabindex="-1" value=""></div>
              <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button primary" data-open="subscribe"></div>
              </div>
          </form>
          <div class="reveal text-center" id="subscribe" data-reveal>
            <p class="lead">Thanks for Subscribing!</p>
            <p>Please be sure to check your email for verification.</p>
            <button class="close-button" data-close aria-label="Close modal" type="button">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          </div>

        <!--End mc_embed_signup-->
			</div>
		</div>
	</div>
</section>

{% schema %}
  {
    "name": "Call to Action",
    "settings": [
       {
        "type": "text",
        "id": "cta-h3",
        "label": "cta-h3",
        "default": "cta-h3"
      },
      {
        "type": "text",
        "id": "cta-p",
        "label": "cta-p",
        "default": "cta-p"
      },
      {
        "type": "select",
        "id": "cta-h3-align",
        "label": "blog-snippet-h2",
        "default": "center",
        "options": [
          {
            "label": "Left",
            "value": "left"
          },
          {
            "label": "Right",
            "value": "right"
          },
          {
            "label": "Center",
            "value": "center"
          }
        ]
      }



    ],
    "presets": [
      {
        "name": "Call To Action",
        "category": "Ayoba-Yo Sections"
      }
    ]
  }
{% endschema %}